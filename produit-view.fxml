<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.esalaf.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Nom" />
    <TextField fx:id="nom" />
    <Label text="Prix :" />
    <TextField fx:id="prix" />


    <Button fx:id="ok" onAction="#onSaveButtonClick" text="Save!" />
    <Button fx:id="ook" mnemonicParsing="false" onAction="#onUpdateButtonClick" text="edit" />
    <Button fx:id="oook" mnemonicParsing="false" onAction="#onDeleteButtonClick" text="delete" />


    <TableView fx:id="mytab" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="col_id" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="col_nom" prefWidth="75.0" text="Nom" />
            <TableColumn fx:id="col_prix" prefWidth="75.0" text="Prix" />
        </columns>
    </TableView>
</VBox>
